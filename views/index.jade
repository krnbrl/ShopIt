	article
		.responsive_padding
			h1.title_bigger.mr_bottom_48.font_primary.font_normal
				| Algunos productos que te pueden interesar
			section.responsive_col.text_align_center
				.col_3.text_align_left(ng-repeat='producto in productos')
					.pd_8.product
						.bg_white.shadow_flat
							.pr_img
								a(href='/producto/{{ producto._id }}')
									.img_container
										img( ng-src='{{producto.foto}}')
							.product_info
								.pd_24
									.info.mr_bottom_32
										h2.title_small
											| {{producto.nombre}}
										.mr_top_16
											h3.font_big.font_gray
												| Descripcion:
											p.font_big.pd_8
												| {{producto.descripcion}}
									.mr_bottom_16.sub_info
										h3.font_big.mr_bottom_4.font_gray
											| Stock:
											span.title_smaller.mr_left_4
												| {{producto.cantidad}}
									.add_cart_container.text_align_center.mr_bottom_16
										h4.font_gray.mr_bottom_8
											| AÃ±adir al carrito
										button.circle.hover_black(title='Quitar' ng-click="agregar(false, $index)")
											img.icon.opacity(src='icons/minus_black.png')
										span.pd_8.title_smaller.v_align_middle()
											| {{ producto.agregados }}
										button.circle.hover_black(title='Agregar' ng-click="agregar(true, $index)")
											img.icon.opacity(src='icons/plus_black.png')
									.price_container.text_align_right
										.prices											
											h2.title_medium.mr_top_16.total
												| $ {{producto.precio}}
									p.text_align_left.mr_top_8
										a.font_gray.font_bold(href='/producto/{{ producto._id }}', target='_blank') Ver mas

